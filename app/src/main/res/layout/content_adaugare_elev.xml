<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.iuliapopa.bac_androidapp.AdaugareElev"
    tools:showIn="@layout/activity_adaugare_elev">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="12dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="264dp"
                    android:layout_height="30dp"
                    android:text="Adaugati datele elevului"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp" />

                <EditText
                    android:id="@+id/textNume"
                    android:layout_width="152dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nume"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    tools:layout_editor_absoluteX="16dp" />

                <EditText
                    android:id="@+id/textPrenume"
                    android:layout_width="151dp"
                    android:layout_height="39dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Prenume"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@+id/textNume"
                    tools:layout_editor_absoluteX="16dp" />

                <EditText
                    android:id="@+id/textInitiala"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="InitialaTata"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@+id/textPrenume"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="149dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:text="Unitate de INvatamant"
                    app:layout_constraintTop_toBottomOf="@+id/textInitiala"
                    tools:layout_editor_absoluteX="16dp" />

                <Spinner
                    android:id="@+id/textLiceu"
                    android:layout_width="240dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="38dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:text="Profil"
                    app:layout_constraintTop_toBottomOf="@+id/textLiceu"
                    tools:layout_editor_absoluteX="16dp" />

                <Spinner
                    android:id="@+id/textProfil"
                    android:layout_width="240dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specializare"
                    app:layout_constraintTop_toBottomOf="@+id/textProfil"
                    tools:layout_editor_absoluteX="16dp" />

                <Spinner
                    android:id="@+id/textSpecializare"
                    android:layout_width="242dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="102dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="9dp"
                    android:text="Limba Materna"
                    app:layout_constraintTop_toBottomOf="@+id/textSpecializare"
                    tools:layout_editor_absoluteX="16dp" />

                <Spinner
                    android:id="@+id/textMaterna"
                    android:layout_width="239dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    tools:layout_editor_absoluteX="16dp" />

                <EditText
                    android:id="@+id/textNotaMaterna"
                    android:layout_width="147dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nota"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@+id/textMaterna"
                    tools:layout_editor_absoluteX="16dp" />

                <EditText
                    android:id="@+id/textContestatieMaterna"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nota Contestatie"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proba Obligatorie" />

                <Spinner
                    android:id="@+id/textObligatorie"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/textNotaObligatorie"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nota "
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/textContestatieObligatorie"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nota Contestatie"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Poba la Alegere" />

                <Spinner
                    android:id="@+id/textAlegere"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/textNotaAlegere"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nota"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/textContestatieAlegere"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nota Contestatie"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Limba Moderna " />

                <Spinner
                    android:id="@+id/textModerna"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.16" />

                <EditText
                    android:id="@+id/textNotaModerna"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Nota "
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/adaugareElev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adaugare Elev" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
